rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if a user is an admin
    function isAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role[0] in ['developer', 'founder'];
    }

    // Rules for user profiles
    match /users/{userId} {
      // Anyone can read a user's public profile
      allow read: if true;
      // Only the user themselves or an admin can write to their profile
      allow write: if request.auth.uid == userId || isAdmin(request.auth.uid);

      // Subcollections for users
      match /{subcollection}/{docId} {
        // Only the user can manage their own subcollections (followers, following, etc.)
        allow read, write, delete: if request.auth.uid == userId;
      }
    }
    
    // Rules for creating new user documents
    match /users/{userId} {
        // A user can create their own user document during signup
        allow create: if request.auth.uid == userId;
    }


    // Rules for posts
    match /posts/{postId} {
      // Anyone can read a post
      allow read: if true;
      // Allow create for any authenticated user
      allow create: if request.auth != null;
      // Allow update/delete only for the post owner or an admin
      allow update, delete: if resource.data.userId == request.auth.uid || isAdmin(request.auth.uid);

      // Subcollections for posts (comments, stars, relays)
      match /{subcollection}/{docId} {
        // Any authenticated user can create comments, stars, or relays
        allow create: if request.auth != null;
        // Anyone can read
        allow read: if true;
        // Only the creator of the subcollection document or an admin can delete
        allow delete: if request.auth.uid == resource.data.userId || isAdmin(request.auth.uid);
      }
    }

    // Rules for flashes
    match /flashes/{flashId} {
        // Anyone can read a flash
        allow read: if true;
        // Only authenticated users can create a flash
        allow create: if request.auth != null;
        // Only the owner can delete
        allow delete: if request.auth.uid == resource.data.userId;
    }

    // Rules for chats and groups
    match /chats/{chatId} {

      // This is the core function to check membership for both DMs and Groups
      function isChatMember() {
        // Check if it's a group chat
        let isGroup = exists(/databases/$(database)/documents/groups/$(chatId));
        
        if (isGroup) {
          // It's a group, check if user is in the members list
          return request.auth.uid in get(/databases/$(database)/documents/groups/$(chatId)).data.members;
        } else {
          // It's a 1-on-1 chat, check if user's ID is in the chatId
          return request.auth.uid in chatId.split('_');
        }
      }

      // Allow read/write access to the chat metadata if the user is a member
      allow read, write: if isChatMember();

      // Rules for messages within a chat
      match /messages/{messageId} {
        allow read: if isChatMember();
        allow create: if isChatMember() && request.auth.uid == request.resource.data.sender;
        allow update, delete: if isChatMember() && request.auth.uid == resource.data.sender;
      }
    }
    
    // Rules for the groups collection itself
    match /groups/{groupId} {
        // Members can read group info
        allow read: if request.auth.uid in resource.data.members;
        // Any authenticated user can create a group
        allow create: if request.auth != null;
        // Only admins of the group can update its info
        allow update: if request.auth.uid in resource.data.admins;
        // Only the original creator can delete the group
        allow delete: if request.auth.uid == resource.data.createdBy;
    }

    // Rules for call signaling
    match /calls/{callId} {
      // Allow read/write if the user is either the caller or the callee
      allow read, write: if request.auth.uid == resource.data.callerId || request.auth.uid == resource.data.calleeId;
      // Allow creation by any authenticated user
      allow create: if request.auth != null;

      match /{subcollection}/{candidateId} {
        // Allow candidates to be added by either party
        allow create: if request.auth.uid == get(/databases/$(database)/documents/calls/$(callId)).data.callerId ||
                         request.auth.uid == get(/databases/$(database)/documents/calls/$(callId)).data.calleeId;
      }
    }

    // App Status collection
    match /app_status/{statusId} {
      // Allow read for everyone (e.g., to check maintenance mode)
      allow read: if true;
      // Only admins can write to app status
      allow write: if isAdmin(request.auth.uid);
    }
    
    // Store Products
    match /products/{productId} {
        // Everyone can read products
        allow read: if true;
        // Only admins can create, update, or delete products
        allow write: if isAdmin(request.auth.uid);
    }

    // Songs collection
    match /songs/{songId} {
        // Everyone can read songs
        allow read: if true;
        // Authenticated users can add songs
        allow create: if request.auth != null;
    }

    // Playlists collection
    match /playlists/{playlistId} {
        // Read access for everyone
        allow read: if true;
        // Create, update, delete only for the owner
        allow write: if request.auth.uid == resource.data.ownerId;
        allow create: if request.auth.uid == request.resource.data.ownerId;
    }

    // Ad Campaigns & Creatives
    match /adCampaigns/{campaignId} {
      allow read: if true;
      allow write: if request.auth.uid == request.resource.data.advertiserId;

      match /creatives/{creativeId} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/adCampaigns/$(campaignId)).data.advertiserId == request.auth.uid;
      }
    }

  }
}