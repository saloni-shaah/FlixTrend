rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Users: Read any profile, write to your own.
    match /users/{userId} {
      // Allow signed-in users to get and list user profiles.
      allow get, list: if isSignedIn();
      allow write: if request.auth.uid == userId;

      // This rule manages all subcollections under a user document.
      match /{subcollection}/{docId} {
        // A user can read their own subcollections.
        // Any signed-in user can read public subcollections like followers/following.
        allow read: if (request.auth.uid == userId) || 
                    (isSignedIn() && (subcollection == 'followers' || subcollection == 'following'));

        // Allow write access to a user's own subcollections.
        // Also, allow a user to add/remove themselves from another user's followers list.
        // Also, allow creation of notifications.
        allow write: if (request.auth.uid == userId) ||
                     (subcollection == 'followers' && docId == request.auth.uid && (request.method == 'create' || request.method == 'delete')) ||
                     (subcollection == 'notifications' && request.method == 'create' && request.resource.data.fromUserId == request.auth.uid);
      }
    }

    // Usernames: Enforce uniqueness and allow checking for signup.
    match /usernames/{username} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow update: if false;
      allow delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }

    // Ad Campaigns & Creatives: Public read-only
    match /adCampaigns/{campaignId}/{documents=**} {
        allow get, list: if true;
        allow write: if false; // Or more specific admin rules
    }

    // Posts: main document
    match /posts/{postId} {
      allow read: if isSignedIn();
      allow create: if request.auth.uid == request.resource.data.userId;

      // Allow update for owner, or for specific, controlled actions like liking or view counts.
      allow update: if isSignedIn() && (
        (request.auth.uid == resource.data.userId) ||
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']) &&
          request.resource.data.likes.diff(resource.data.get('likes', {})).affectedKeys().hasOnly([request.auth.uid])
        ) ||
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['viewCount']) &&
          request.resource.data.viewCount == resource.data.viewCount + 1
        )
      );

      allow delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }


    // Posts: subcollections (comments, likes, etc.)
    match /posts/{postId}/{subcollection}/{docId} {
        allow read, create: if isSignedIn();
        allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Flashes: main document
    match /flashes/{flashId} {
      allow read: if isSignedIn();
      allow create: if request.auth.uid == request.resource.data.userId;
      // Allow update if user is the owner OR if they are just incrementing the view count.
      allow update: if isSignedIn() && (
        (request.auth.uid == resource.data.userId) || 
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['viewCount']) &&
          request.resource.data.viewCount == resource.data.viewCount + 1
        )
      );
      allow delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }
    
    // Groups: Allow members to read, admins to update.
    match /groups/{groupId} {
      allow read, create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid in resource.data.admins;
      allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;
    }

    // Chat Messages
    match /chats/{chatId}/messages/{messageId} {
      function isParticipant() {
        let isDmParticipant = request.auth.uid in chatId.split('_');
        let isGroupParticipant = exists(/databases/$(database)/documents/groups/$(chatId)) && 
                                 request.auth.uid in get(/databases/$(database)/documents/groups/$(chatId)).data.members;
        return isDmParticipant || isGroupParticipant;
      }

      allow read, create: if isSignedIn() && isParticipant();
      allow update: if isSignedIn() && isParticipant();
      allow delete: if isSignedIn() && resource.data.sender == request.auth.uid;
    }

    // Songs: Read-only.
    match /songs/{songId} {
        allow read: if isSignedIn();
        allow write: if false;
    }

    // Drops: main document
    match /drops/{dropId} {
      allow read: if isSignedIn();
      allow create: if request.auth.uid == request.resource.data.userId;

      // Allow update for owner, or for specific, controlled actions like liking.
      allow update: if isSignedIn() && (
        (request.auth.uid == resource.data.userId) ||
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']) &&
          request.resource.data.likes.diff(resource.data.get('likes', {})).affectedKeys().hasOnly([request.auth.uid])
        )
      );
      allow delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }
    
    // Drops: subcollections
    match /drops/{dropId}/{subcollection}/{docId} {
        allow read, create: if isSignedIn();
        allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Prompts: 'current' is for the old system, 'dropPrompts' is the new system.
    match /prompts/current {
      allow read: if true;
      allow write: if request.auth.uid == 'x04gu2AkBFVX4y6Iho6J713cJOy2';
    }

    match /dropPrompts/{promptId} {
      allow read: if true;
      allow write: if request.auth.uid == 'x04gu2AkBFVX4y6Iho6J713cJOy2';
    }
  }
}
