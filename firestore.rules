rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // =================================
    // Helper Functions
    // =================================
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      // Check if the user document exists and has the required role.
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role.hasAny(['developer', 'founder']);
    }

    // NEW: Smart function to check participation in ANY chat type
    function isChatParticipant(chatId) {
      // For 1-on-1 chats, the user's UID must be in the chatId string
      let isOneOnOneParticipant = chatId.matches(request.auth.uid);
      // For group chats, the user's UID must be in the group's members list
      let isGroupParticipant = exists(/databases/$(database)/documents/groups/$(chatId)) &&
                               request.auth.uid in get(/databases/$(database)/documents/groups/$(chatId)).data.members;
      
      return isOneOnOneParticipant || isGroupParticipant;
    }

    // =================================
    // Collections
    // =================================

    // USERS: Publicly readable, but only the owner or an admin can write.
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId) || isAdmin();

      // Subcollections can only be written to by the owner of the parent user document
      match /{subcollection}/{docId} {
        allow read, write: if isOwner(userId);
      }
    }

    // POSTS & FLASHES: Read-public, Create-signed_in, Write-self/admin
    match /{postCollection}/{postId} where postCollection == 'posts' || postCollection == 'flashes' {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isOwner(resource.data.userId) || isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin(); // Deletion handled by Cloud Function

      match /{subcollection}/{docId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }
    
    // CHATS: Read/write access only for participants
    match /chats/{chatId}/messages/{messageId} {
        allow read, write: if isSignedIn() && isChatParticipant(chatId);
    }
    
    // GROUPS: Read/write for members, only admins can update info.
    match /groups/{groupId} {
        allow get: if isChatParticipant(groupId);
        allow list: if isSignedIn(); // Allow signed-in users to list groups (for joining anonymous groups)
        allow create: if isSignedIn();
        allow update: if isChatParticipant(groupId); // Let's be more lenient for now, client logic should restrict non-admins
        allow delete: if isAdmin() || request.auth.uid == resource.data.createdBy;
    }

    // APP_STATUS: Read-only for users, write for admins.
    match /app_status/{statusId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // SONGS, PRODUCTS: Read-only for users, write for admins.
    match /{readOnlyCollection}/{docId} where readOnlyCollection == 'songs' || readOnlyCollection == 'products' {
       allow read: if true;
       allow write: if isAdmin();
    }
    
    // PLAYLISTS, COLLECTIONS: Read/write only for the owner.
    match /{userContentCollection}/{docId} where userContentCollection == 'playlists' || userContentCollection == 'collections' {
        allow read, write: if isOwner(resource.data.ownerId);
    }

    // AD CAMPAIGNS: Only advertiser or admin can manage.
    match /adCampaigns/{campaignId} {
      allow read: if true;
      allow write: if isOwner(request.resource.data.advertiserId) || isAdmin();
      
      match /creatives/{creativeId} {
          allow read: if true;
          allow write: if isSignedIn() || isAdmin();
      }
    }

    // GAMES: Publicly readable, only writable by admins.
    match /games/{gameId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // CALLS: Rules for WebRTC signaling.
    match /calls/{callId} {
      allow read, write: if isSignedIn(); // Simplified for now
      
       match /offerCandidates/{candidateId} {
         allow create: if isSignedIn();
       }
       match /answerCandidates/{candidateId} {
         allow create: if isSignedIn();
       }
    }

    // TICTACTOE: Rules for the game lobby and active games.
    match /tictactoe/{gameId} {
        allow read: if true;
        // Allow creation if signed in.
        allow create: if isSignedIn();
        // Allow updates (joining, making moves) only by participants or if joining a waiting game.
        allow update: if isSignedIn() && 
                        (request.auth.uid in resource.data.players || resource.data.status == 'waiting');
    }
  }
}