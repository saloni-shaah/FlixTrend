{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public and private profile data.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The unique ID of the user, matching their Firebase Auth UID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "phoneNumber": {
            "type": "string",
            "description": "The user's verified phone number."
        },
        "username": {
          "type": "string",
          "description": "The user's public, unique username."
        },
        "name": {
          "type": "string",
          "description": "The user's full display name."
        },
        "bio": {
          "type": "string",
          "description": "A short user biography."
        },
        "dob": {
          "type": "string",
          "format": "date",
          "description": "User's date of birth."
        },
        "gender": {
          "type": "string",
          "enum": ["male", "female", "non-binary", "other", "prefer-not-to-say"],
          "description": "User's gender identity."
        },
        "location": {
            "type": "string",
            "description": "User's city and country."
        },
        "avatar_url": {
          "type": "string",
          "format": "uri",
          "description": "URL for the user's profile picture."
        },
        "banner_url": {
            "type": "string",
            "format": "uri",
            "description": "URL for the user's profile banner image."
        },
        "role": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["user", "creator", "developer", "founder", "cto"]
          },
          "description": "The roles of the user within the application."
        },
        "accountType": {
          "type": "string",
          "enum": ["user", "creator", "business"],
          "description": "The type of account, which determines their platform access."
        },
        "creatorType": {
            "type": "string",
            "enum": ["daily", "vlogs", "moments", "travel", "self", "creative", "art", "photos", "design", "writing", "play", "gaming", "challenges", "comedy", "reactions", "learn", "tips", "tech", "study", "explainers", "culture", "music", "movies", "trends", "community"],
            "description": "The primary sub-category for a creator's content, or the main category if they choose 'Mix of All'."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the user account was created."
        },
        "isPremium": {
          "type": "boolean",
          "description": "Indicates if the user has a premium subscription."
        },
        "premiumUntil": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp for when the user's premium subscription expires."
        },
        "referralCode": {
            "type": "string",
            "description": "The user's unique referral code."
        },
        "referredBy": {
            "type": "string",
            "description": "The referral code of the user who referred them."
        },
        "credits": {
            "type": "number",
            "description": "The user's advertising credit balance in INR."
        },
        "aiUsage": {
            "type": "object",
            "description": "Tracks the user's monthly AI feature usage.",
            "properties": {
                "textCount": {
                    "type": "number",
                    "description": "Number of text-based AI generations this month."
                },
                "imageCount": {
                    "type": "number",
                    "description": "Number of image-based AI generations this month."
                },
                "searchCount": {
                    "type": "number",
                    "description": "Number of web searches performed this month."
                },
                "lastReset": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp of the last time usage counts were reset."
                }
            }
        },
        "businessProfile": {
            "type": "object",
            "description": "Additional profile information for business accounts.",
            "properties": {
                "companyName": { "type": "string" },
                "companyWebsite": { "type": "string", "format": "uri" },
                "industry": { "type": "string" },
                "companyAddress": { "type": "string" },
                "companyCity": { "type": "string" },
                "companyState": { "type": "string" },
                "companyZip": { "type": "string" },
                "companyCountry": { "type": "string" },
                "userRoleInCompany": { "type": "string" },
                "campaignGoals": {
                    "type": "array",
                    "items": { "type": "string" }
                }
            }
        }
      },
      "required": ["uid", "email", "username", "name", "createdAt"]
    },
    "Drop": {
      "title": "Drop",
      "description": "Represents a user's submission for a daily prompt.",
      "type": "object",
      "properties": {
        "userId": { "type": "string", "description": "The UID of the user who created the drop." },
        "username": { "type": "string" },
        "avatar_url": { "type": "string", "format": "uri" },
        "promptId": { "type": "string", "description": "The ID of the prompt this drop is for." },
        "promptText": { "type": "string" },
        "content": { "type": "string", "description": "The user's text content for the drop." },
        "mediaUrl": { "type": "array", "items": { "type": "string", "format": "uri" } },
        "createdAt": { "type": "string", "format": "date-time" },
        "likes": { "type": "object", "description": "A map of user UIDs to booleans for likes." },
        "commentCount": { "type": "number" },
        "viewCount": { "type": "number" }
      },
      "required": ["userId", "promptId", "mediaUrl", "createdAt"]
    },
    "AdCampaign": {
      "title": "Ad Campaign",
      "description": "Represents an advertising campaign created by a business user.",
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "Name of the ad campaign." },
        "advertiserId": { "type": "string", "description": "The UID of the business user who created the campaign." },
        "status": { "type": "string", "enum": ["draft", "active", "paused", "completed"], "description": "The current status of the campaign." },
        "budget": { "type": "number", "description": "Total budget for the campaign in INR." },
        "biddingStrategy": { "type": "string", "enum": ["cpc", "cpm", "cpv"], "description": "Cost-Per-Click, Cost-Per-Mille, or Cost-Per-View." },
        "placements": {
          "type": "array",
          "items": { "type": "string", "enum": ["vibes_feed", "flashes", "scope", "games", "almighty"] },
          "description": "Where the ads for this campaign will be shown."
        },
        "impressions": { "type": "number", "description": "Total times the ad has been shown." },
        "clicks": { "type": "number", "description": "Total times the ad has been clicked." },
        "createdAt": { "type": "string", "format": "date-time" },
        "startDate": { "type": "string", "format": "date-time" },
        "endDate": { "type": "string", "format": "date-time", "description": "Optional end date for the campaign." }
      },
      "required": ["name", "advertiserId", "status", "budget", "biddingStrategy", "placements"]
    },
    "AdCreative": {
      "title": "Ad Creative",
      "description": "Represents the actual visual content of an ad.",
      "type": "object",
      "properties": {
        "campaignId": { "type": "string", "description": "The ID of the campaign this creative belongs to." },
        "type": { "type": "string", "enum": ["image", "video"], "description": "The type of media." },
        "mediaUrl": { "type": "string", "format": "uri", "description": "URL of the ad's image or video." },
        "headline": { "type": "string", "description": "The main headline for the ad." },
        "body": { "type": "string", "description": "The body text for the ad." },
        "callToAction": { "type": "string", "description": "The call-to-action button text (e.g., 'Learn More')." },
        "callToActionUrl": { "type": "string", "format": "uri", "description": "The URL the user is taken to upon clicking the ad." },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["campaignId", "type", "mediaUrl", "headline", "callToAction", "callToActionUrl"]
    }
  },
  "auth": {
    "providers": ["EMAIL_PASSWORD", "GOOGLE", "PHONE"],
    "customClaims": {
      "admin": {
        "type": "boolean",
        "description": "Grants administrative privileges across the application."
      }
    }
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores all user profile documents."
    },
    "/drops/{dropId}": {
        "schema": { "$ref": "#/entities/Drop" },
        "description": "Stores all user submissions for daily drops."
    },
    "/adCampaigns/{campaignId}": {
      "schema": { "$ref": "#/entities/AdCampaign" },
      "description": "Stores all ad campaign configurations."
    },
    "/adCampaigns/{campaignId}/creatives/{creativeId}": {
      "schema": { "$ref": "#/entities/AdCreative" },
      "description": "Stores the ad creatives for a specific campaign."
    }
  }
}
