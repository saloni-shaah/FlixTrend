rules_version = '2';

service firebase.storage {
  match /b/flixtrend-24072025.appspot.com/o {

    // Allow public read access to all files under user_uploads.
    // This is generally safe for profile pictures, post images, etc.
    match /user_uploads/{allPaths=**} {
      allow read;
      allow write: if request.auth != null &&
                    request.resource.size < 25 * 1024 * 1024 && // 25MB limit
                    request.resource.contentType.matches('image/.*|video/.*|audio/.*');
    }
  }
}
