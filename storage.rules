
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // User-specific files: Avatars, Banners, private uploads
    // Users can only write to their own path.
    match /user_uploads/{userId}/{fileName} {
      allow read: if isSignedIn(); // Or make it public if you want anyone to see user-uploaded content
      allow write: if isSignedIn() && request.auth.uid == userId;

      // Validate file type and size (e.g., max 5MB for images)
      allow create: if request.resource.size < 5 * 1024 * 1024 &&
                       request.resource.contentType.matches('image/.*|video/.*|audio/.*');
    }

    // Flash media uploads have their own path
    match /user_uploads/flashes/{userId}/{fileName} {
        allow read: if isSignedIn();
        allow write: if isSignedIn() && request.auth.uid == userId;
        
        allow create: if request.resource.size < 25 * 1024 * 1024 && // Larger size for potential videos
                       request.resource.contentType.matches('image/.*|video/.*');
    }
    
    // Default rule: Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
