
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // This rule allows public read access to all user-uploaded content.
    // This is suitable for profile pictures, post media, etc. that are meant to be public.
    match /user_uploads/{userId}/{allPaths=**} {
      allow read;

      // Write access is restricted. Only the authenticated user corresponding to the {userId}
      // can upload files to their own folder.
      // This rule also enforces a size limit and content type validation.
      allow write: if request.auth.uid == userId &&
                   request.resource.size < 25 * 1024 * 1024 && // 25MB limit
                   request.resource.contentType.matches('image/.*|video/.*|audio/.*');
    }

    // New rule for voice messages
    match /voice_messages/{userId}/{fileName} {
      allow read, write: if request.auth.uid == userId &&
                          request.resource.size < 5 * 1024 * 1024 && // 5MB limit for audio
                          request.resource.contentType.matches('audio/.*');
    }
  }
}
